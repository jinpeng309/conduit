{
  "plugins": [
    "react",
    "promise"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "extends" : [
    "airbnb",
    "eslint:recommended",
    "plugin:promise/recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "arrow-parens": [1, "as-needed"],
    "curly": [2, "all"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "eqeqeq": [2, "smart"],
    "import/extensions": [2, "ignorePackages"],
    "import/first": [2, ""],
    "indent": 1,
    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-quotes": 1,
    "keyword-spacing": 1,
    "no-console": [1, { "allow": ["warn", "error"] }], // minor offense
    "no-trailing-spaces": 1,
    "no-var": 2,
    "promise/always-return": 0,
    "promise/avoid-new": 0,
    "react/display-name": 0, // minor offense
    "react/jsx-boolean-value": 0,
    "react/jsx-closing-bracket-location": [1, { "nonEmpty": "after-props", "selfClosing": "after-props" }],
    "react/jsx-curly-spacing": [1, "never", {"allowMultiline": false}],
    "react/jsx-filename-extension": 0,
    "react/jsx-first-prop-new-line": [1, "multiline"],
    "react/jsx-wrap-multilines": [
      1,
      {
        "declaration": "parens-new-line",
        "assignment": "parens-new-line",
        "return": "parens-new-line",
        "arrow": "parens-new-line"
      }
    ],
    "react/prefer-stateless-function": 0, // TODO: convert to stateless functions and enable
    "react/prop-types": 0, // https://github.com/runconduit/conduit/pull/993
    "react/sort-prop-types": 1,
    "semi": [2, "always"],
    "sort-imports": [1, { "ignoreCase": true, "memberSyntaxSortOrder": ["single", "multiple", "all", "none"] }],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "never"],
    "strict": [1, "safe"]
  }
}
